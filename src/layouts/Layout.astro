---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ro">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Platforma de Training AgroConcept" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <!-- Font: Roboto pentru aspect tehnic -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700;900&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />

        <!-- SISTEM GLOBAL DE MONITORIZARE -->
        <script>
            import { Analytics } from '../utils/analytics.js';

            // 1. Monitorizare Vizualizare Pagină
            const currentPage = document.title;
            Analytics.trackPageView(currentPage);

            // 2. Monitorizare Timp Petrecut
            const startTime = new Date();
            window.addEventListener('beforeunload', () => {
                Analytics.trackTime(currentPage, startTime);
            });

            // 3. Monitorizare Globală Click-uri pe Download/Video
            // Acest cod prinde orice click pe un link care conține "Descarcă", "PDF" sau iconițe specifice
            document.addEventListener('click', (e) => {
                // @ts-ignore
                const link = e.target.closest('a');
                
                if (link) {
                    const href = link.getAttribute('href');
                    const text = link.innerText || "Fisier";

                    // Dacă e un link extern sau PDF/Video
                    if (href && (href.startsWith('http') || href.endsWith('.pdf') || href.includes('drive.google'))) {
                         // Găsim numele modelului din containerul părinte dacă există
                        const container = link.closest('.model-item-wide') || link.closest('.resource-card');
                        let context = "";
                        if(container) {
                            const title = container.querySelector('h3');
                            // @ts-ignore
                            if(title) context = title.innerText;
                        }

                        Analytics.trackDownload(`${context} - ${text}`, href);
                    }
                }
            });
        </script>
	</body>
</html>

<style is:global>
	:root {
        /* Paleta de culori AgroConcept / New Holland */
		--nh-blue: #003087;
		--nh-yellow: #F4D03F;
        --kverneland-red: #E30613;
		--dark-bg: #111827;
		--text-light: #ffffff;
        --card-bg: rgba(255, 255, 255, 0.95);
	}
	
    html {
		font-family: 'Roboto', sans-serif;
		background: var(--dark-bg);
		color: var(--text-light);
        scroll-behavior: smooth;
	}
	
    body {
		margin: 0;
		padding: 0;
        min-height: 100vh;
	}

    /* Resetare de bază */
    * {
        box-sizing: border-box;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    h1, h2, h3 {
        margin: 0;
    }
</style>