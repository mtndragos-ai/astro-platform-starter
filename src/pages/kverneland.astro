    .machine-image { font-size: 3rem; margin-bottom: 1rem; }
    .machine-card h3 { margin: 0; font-size: 1.25rem; font-weight: 700; color: #1f2937; }
    .machine-card p { color: #6b7280; margin: 0.5rem 0 1.5rem 0; }
    .machine-link { color: #003087; font-weight: 600; }
    @media (max-width: 768px) { .header-content { flex-direction: column; height: auto; padding: 1rem; } .center-nav { width: 100%; justify-content: space-between; overflow-x: auto; } }
</style>