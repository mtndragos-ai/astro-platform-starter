---
import Layout from '../layouts/Layout.astro';

// Aici poți pune logica de verificare login pe viitor
const pageTitle = "AgroConcept Training | Portal Tehnicieni";
---

<Layout title={pageTitle}>
	<main class="landing-container">
        
        <div class="hero-background">
            <div class="overlay"></div>
        </div>

        <div class="content-wrapper">
            <header>
                <h1 class="brand">Agro<span class="highlight">Concept</span> Training</h1>
                <p class="subtitle">Platformă dedicată echipei tehnice</p>
            </header>

            <div class="login-card">
                <h2>Autentificare Tehnician</h2>
                <form action="/categorii" method="GET"> 
                    <div class="input-group">
                        <label for="user">Utilizator</label>
                        <input type="text" id="user" placeholder="nume.prenume" required />
                    </div>
                    
                    <div class="input-group">
                        <label for="pass">Parolă</label>
                        <input type="password" id="pass" placeholder="••••••••" required />
                    </div>

                    <button type="submit" class="cta-button">
                        ACCESEAZĂ MATERIALELE
                    </button>
                </form>
                
                <p class="support-text">Ai uitat parola? Contactează IT.</p>
            </div>
		</div>

	</main>
</Layout>

<style>
    /* Stiluri specifice acestei pagini */

    .landing-container {
        position: relative;
        height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    /* Fundalul din Canva */
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Aici pui imaginea ta din Canva */
        background-image: url('/background-tractor.jpg'); 
        background-size: cover;
        background-position: center;
        z-index: -1;
    }

    /* Strat întunecat peste imagine pentru a se vedea scrisul */
    .overlay {
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6); 
    }

    .content-wrapper {
        z-index: 10;
        text-align: center;
        max-width: 500px;
        width: 90%;
    }

    .brand {
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .highlight {
        color: var(--new-holland-yellow);
    }

    .subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 3rem;
    }

    /* Cardul de Login */
    .login-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px); /* Efect de sticlă modern */
        padding: 2rem;
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .login-card h2 {
        margin-top: 0;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .input-group {
        text-align: left;
        margin-bottom: 1rem;
    }

    .input-group label {
        display: block;
        font-size: 0.8rem;
        margin-bottom: 0.3rem;
        opacity: 0.8;
    }

    .input-group input {
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        border: none;
        background: rgba(255,255,255, 0.9);
        font-size: 1rem;
        box-sizing: border-box; /* Important pentru padding */
    }

    .cta-button {
        width: 100%;
        padding: 15px;
        background-color: var(--new-holland-yellow); /* Galben NH */
        color: #000;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: transform 0.2s, background-color 0.2s;
        margin-top: 1rem;
    }

    .cta-button:hover {
        background-color: #ffdb4d;
        transform: scale(1.02);
    }

    .support-text {
        margin-top: 1rem;
        font-size: 0.8rem;
        opacity: 0.6;
    }
</style>
